def likes(names):
    
    people = len(names)
    names += [None] * 5
    
    templates = [
        "no one likes this",
        f"{names[0]} likes this",
        f"{names[0]} and {names[1]} like this",
        f"{names[0]}, {names[1]} and {names[2]} like this",
        f"{names[0]}, {names[1]} and {people - 2} others like this"
    ]
    
    return templates[4 if people >= 4 else people]
